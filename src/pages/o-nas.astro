---
import '../styles/global.css'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import Hero from '../components/Hero.astro'
import AboutIntro from '../components/AboutIntro.astro'
import FeaturesGrid from '../components/FeaturesGrid.astro'
import TrainerProfiles from '../components/TrainerProfiles.astro'
import CommunitySection from '../components/CommunitySection.astro'
import SocialMeta from '../components/SocialMeta.astro'
---

<html lang="pl">
	<head>
		<meta charset="utf-8" />
		<!-- Favicons -->
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
		<link rel="manifest" href="/site.webmanifest" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>O nas - Southeast Jiu-Jitsu | Kraków</title>
		<meta name="description" content="Poznaj Southeast Jiu-Jitsu w Krakowie - naszych trenerów, innowacyjne metody treningowe i społeczność pasjonatów sportów walki. Treningi dla wszystkich poziomów zaawansowania." />
		
		<SocialMeta 
			title="O nas - Southeast Jiu-Jitsu | Kraków"
			description="Poznaj Southeast Jiu-Jitsu w Krakowie - naszych trenerów, innowacyjne metody treningowe i społeczność pasjonatów sportów walki."
			image="/training-session.jpg"
			url="/o-nas"
			lang="pl"
		/>
	</head>
	<body class="bg-additional">
		<Header currentLang="pl" currentUrl={Astro.url.pathname} />
		<main class="relative">
			<!-- Hero Section -->
			<Hero currentLang="pl" backgroundImage="/team.jpg" />
			
			<!-- Intro Section -->
			<AboutIntro currentLang="pl" />
			
			<!-- Features Grid Section -->
			<FeaturesGrid currentLang="pl" />
			
			<!-- Trainer Profiles Section -->
			<TrainerProfiles currentLang="pl" />
			
			<!-- Community and CTA Section -->
			<CommunitySection currentLang="pl" />
		</main>
		<Footer currentLang="pl" />
	</body>
</html>