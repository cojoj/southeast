---
export interface Props {
  currentLang?: 'pl' | 'en';
}

const { currentLang = 'pl' } = Astro.props;

const isPolish = currentLang === 'pl';
---

<footer class="bg-secondary text-additional py-12 lg:py-16">
  <div class="container mx-auto px-5 max-w-4xl">
    <!-- Logo -->
    <div class="flex justify-center mb-12">
      <img 
        src="/logos/logo_white_jj.svg" 
        alt="Southeast Jiu-Jitsu Logo" 
        class="w-40 sm:w-48 lg:w-56 h-auto object-contain"
      />
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-16 mb-8">
      <!-- Contact Information -->
      <div class="text-center lg:text-left space-y-4">
        <h3 class="text-base font-semibold uppercase tracking-wide mb-6">
          {isPolish ? "Kontakt" : "Contact"}
        </h3>
        <div class="space-y-2 text-sm lg:text-base">
          <a 
            href="https://maps.google.com/?q=Southeast+Jiu-Jitsu,+ul.+Saska+12F/6U,+Kraków,+Poland"
            target="_blank"
            rel="noopener noreferrer"
            class="block hover:text-primary transition-colors cursor-pointer group"
            data-map-link
          >
            <span class="font-medium group-hover:underline">ul. Saska 12F/6U</span><br>
            <span class="text-additional/80 group-hover:underline group-hover:text-primary">30-720 Kraków</span>
          </a>
          <a 
            href="tel:+48502680950"
            class="text-additional/80 hover:underline hover:text-primary transition-colors cursor-pointer block"
          >
            +48 502 680 950
          </a>
          <a 
            href="mailto:southeast.jiujitsu@gmail.com"
            class="text-additional/80 hover:underline hover:text-primary transition-colors cursor-pointer block"
          >
            southeast.jiujitsu@gmail.com
          </a>
        </div>
      </div>

      <!-- Social Media & Language -->
      <div class="text-center lg:text-right space-y-6">
        <h3 class="text-base font-semibold uppercase tracking-wide">
          {isPolish ? "Śledź nas" : "Follow Us"}
        </h3>
        
        <!-- Social Media -->
        <div class="flex justify-center lg:justify-end space-x-6">
          <a href="https://www.instagram.com/southeast.jiujitsu/" target="_blank" rel="noopener noreferrer" 
             class="text-additional hover:text-primary transition-colors" aria-label="Instagram">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </a>
          <a href="https://www.facebook.com/profile.php?id=61570579595150" target="_blank" rel="noopener noreferrer" 
             class="text-additional hover:text-primary transition-colors" aria-label="Facebook">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
        </div>
        
        <!-- Language Toggle -->
        <div class="flex justify-center lg:justify-end space-x-3 text-sm">
          <a href="/" class={`${isPolish ? 'font-semibold' : 'text-additional/70'} hover:text-primary transition-colors`}>PL</a>
          <span class="text-additional/40">|</span>
          <a href="/en/" class={`${!isPolish ? 'font-semibold' : 'text-additional/70'} hover:text-primary transition-colors`}>EN</a>
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="border-t border-additional/20 pt-6 text-center">
      <p class="text-sm text-additional/70">
        © {new Date().getFullYear()} Southeast Jiu-Jitsu
      </p>
    </div>
  </div>
</footer>

<script is:inline>
  const mapLink = document.querySelector('[data-map-link]');

  /** @param {MouseEvent} event */
  function handleMapsClick(event) {
    const isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);

    if (isMobile) {
      event.preventDefault();

      const geoUrl = 'geo:0,0?q=Southeast+Jiu-Jitsu,+ul.+Saska+12F/6U,+Kraków,+Poland';
      const iframe = document.createElement('iframe');
      iframe.style.display = 'none';
      iframe.src = geoUrl;
      document.body.appendChild(iframe);

      setTimeout(() => {
        document.body.removeChild(iframe);
        window.open('https://maps.google.com/?q=Southeast+Jiu-Jitsu,+ul.+Saska+12F/6U,+Kraków,+Poland', '_blank');
      }, 500);
    }
  }

  mapLink?.addEventListener('click', handleMapsClick);
</script>
